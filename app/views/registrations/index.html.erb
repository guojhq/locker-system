<h1>Registrations</h1>

<% form_tag registrations_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search %>
    <%= submit_tag "search", :name => nil %>
  </p>
<% end %>

<ul>
  <li>
<% for registration in @registrations %>
<%= link_to registration.lockerNumber, registrations_path(registration) %>
<%= link_to "Edit", edit_registration_path(registration) %>
<%= link_to "Destroy", registrations_path(registration), :method => :delete %>
  </li> 
</ul>

<table>
  <thead>
    <tr>
      <th>Studentnumber</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Lockernumber</th>
      <th>Lockertype</th>
      <th>Lockercombo</th>
      <th>Numberofsemesters</th>
      <th>Termsaccepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.studentNumber %></td>
        <td><%= registration.firstName %></td>
        <td><%= registration.lastName %></td>
        <td><%= registration.email %></td>
        <td><%= registration.lockerNumber %></td>
        <td><%= registration.lockerType %></td>
        <td><%= registration.lockerCombo %></td>
        <td><%= registration.numberOfSemesters %></td>
        <td><%= registration.termsAccepted %></td>
        <td><%= link_to 'Show', registration %></td>
        <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Registration', new_registration_path %>
